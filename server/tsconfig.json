{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "Node",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "baseUrl": "./",
      "outDir": "../dist/server",
      "rootDir": "./",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
  }
  